@model IEnumerable<ECommerceNET.Entities.ChiTietDonHang>

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
    Layout = "_FrontEnd";
}
<h2 style="text-align:center">Chi tiết đơn hàng</h2>
<!-- Cart Start -->
<div class="cart-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-page-inner">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                
                                </tr>
                            </thead>
                            <tbody class="align-middle">
                                @foreach (var item in Model)
                                {

                                    <tr>


                                        <td>

                                            <div class="img">
                                                <a href="#"><img src="~/images/sanpham/@item.hinhSP" alt="Image"></a>
                                                <p>@item.tenSP</p>
                                            </div>
                                        </td>
                                        <td>@item.donGia đ</td>
                                        <td>
                                            <div class="qty">
                                                <!--<button class="btn-minus"><i class="fa fa-minus"></i></button>-->
                                                <input type="text" value="@item.soLuong">
                                                <!--   <button class="btn-plus"><i class="fa fa-plus"></i></button>-->
                                            </div>
                                        </td>
                                        <td>@item.thanhTien đ</td>

                                       

                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart-page-inner">
                    <div class="row">
                      

                        <div class="col-md-12">
                            
                              
                                <div class="cart-summary">
                                    <div class="cart-content">
                                        <h1>Thông tin đơn hàng</h1>
                                        <p>Ngày đặt hàng<span>@ViewBag.ngaydat</span></p>
                                        <p>Trạng thái<span>@ViewBag.trangthai</span></p>
                                        <p>Tổng tiền hàng<span>@ViewBag.tth đ</span></p>
                                        <p>Giảm giá<span>@ViewBag.magg </span></p>
                                        <p>Phí giao hàng<span>FREE</span></p>
                                        <p>Tổng cộng<span>@ViewBag.tongcong</span></p>
                                        <h1>Thông tin người nhận</h1>
                                        <p>Họ tên<span>@ViewBag.hodh @ViewBag.tendh</span></p>
                                        <p>Địa chỉ: @ViewBag.diachi </p>
                                        <p>Email<span>@ViewBag.email</span></p>
                                        <p>SĐT<span>@ViewBag.sdt</span></p>
                                        <p>Ghi chú: @ViewBag.ghichu</p>
                                    </div>
                                
                                </div>
                            
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->














